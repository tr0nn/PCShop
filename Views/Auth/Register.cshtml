@model PCshop_.Models.RegisterModel


@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("/Content/MyCSS/Register.css")
</head>
<body class="loginbody">

    <form action="/Auth/Register" method="post">
        <div class="container">
            <h1>Register</h1>
            <hr>
            <label for="Username"><b>Username  *</b></label>
            <div class="input-class">
                <input type="text" placeholder="Username " name="UserName" required>
            </div>
            <label for="email"><b>Email address *</b></label>
            <div class="input-class">
                <input type="text" placeholder="Enter Email" name="Email" required>
            </div>
            <label for="psw"><b>Password *</b></label>
            <div class="input-class">
                <input type="password" placeholder="Enter Password" name="Password" required>
            </div>

            <label for="psw-repeat"><b>Repeat Password *</b></label>
            <div class="input-class">
                <input type="password" placeholder="Repeat Password" name="Repeat_Password" required>
            </div>
            <div><h2>@ViewBag.error</h2></div>
            <p><strong>Sing up today and you will be able to:</strong></p>
            <ul>
                <li>Speed your way through checkout</li>
                <li>Track your orders easily</li>
                <li>Keep a record of all your purchases</li>
            </ul>

            <hr>
            <button type="submit" class="registerbtn">Register</button>
            <p>
                Your personal data will be used to support your experience throughout this website,
                to manage access to your account, and for other purposes described in our privacy policy.
            </p>
        </div>

        <div class="container signin">
            <p>Already have an account? <a href="/Auth/login"> <strong>Sign in</strong></a></p>
        </div>
    </form>
</body>
</html>



