<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/MyCSS/Index.css")

    @{ //დალოგინებულზე შესვლა და რეგიტრაცია არგამოჩნდება

        var user = (PCshop_.Models.registration)Session["user"];
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("PCShop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Home/Index">Home</a></li>
                    <li><a href="/Home/About">About</a></li>
                    <li><a href="/Home/Contact">Contact</a></li>
                    @if (user == null)
                    {
                        <li id="LogRegid"><a href="/Auth/Login"><strong>Login</strong></a></li>
                        <li id="LogRegid1"><a href="/Auth/Register"><strong>Register</strong></a></li>
                    }
                    else
                    {
                    <li id="LogRegid"><a href="/User/Index/@user.Id"><strong>@user.Username</strong></a></li>
                    <li id="LogRegid1"><a href="/Auth/Register"><strong>Register</strong></a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year PC-Shop   Terms of Service</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
